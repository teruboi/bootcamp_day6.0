<% if (typeof err != 'undefined') { %>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <ul>
            <% err.forEach(e => { %>
                <li>
                    <%= e.msg %>
                </li>
            <% }) %>
        </ul>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>


<div class="container justify-content-center">
    <div class="container d-flex flex-column row justify-content-center">
        <h2 class="text-center">New Contact</h2>
        <div>
            <form action="/contact/create" method="post">
                <div class="form-group">
                  <label for="newName">Name</label>
                  <input type="text" class="form-control" name="newName" placeholder="Enter your full name" value="<%= name %>" required>
                </div>
                <div class="form-group">
                  <label for="newEmail">Email Address</label>
                  <input type="text" class="form-control" name="newEmail" placeholder="Enter your email address" value="<%= email %>" required>
                </div>
                <div class="form-group">
                  <label for="newPhone">Phone Number</label>
                  <input type="text" class="form-control" name="newPhone" placeholder="Enter your phone number" value="<%= phone %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>